@model AudiobookBG.Web.ViewModels.Administration.Categories.AllViewModel

@{
    ViewData["Title"] = "All Categories";
}

    <div class="page-header header-filter" data-parallax="true" style="background-image: url('img/HomePage.jpg')">
        <div class="bg-blur container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <div class="header-primary text-center">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" asp-area="Administration" asp-action="Create" asp-controller="Categories">Create New</a>
                    </p>

                    <div class="row">
                        @foreach (var item in Model.All)
                        {
                            <div class="card mt-2 col-md-3" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title"><a href="@item.Url">@item.Name (@item.CategoriesBooksCount)</a></h5>
                                    <a asp-area="Administration" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method ="post">
                                        <input type="submit" class="btn btn-danger" value="Delete">
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

