@model AudiobookBG.Web.ViewModels.Administration.Books.BookViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div>
    <h1 class="text-center"><span class="badge badge-pill badge-dark">@Model.Title</span></h1>
    <div class="container-fluid bg-blur w-50 text-center">
        @foreach (var item in Model.Categories)
        {
            <h5 class="text-center mb-2 mt-2 d-inline"><span class="badge badge-pill badge-success"><a href="@item.Url">@item.Name</a></span></h5>
        }
        @foreach (var item in Model.Authors)
        {
            <h5 class="text-center mb-2 mt-2 d-inline"><span class="badge badge-pill badge-warning"><a href="@item.Url">@item.FullName</a></span></h5>
        }
        <img src="@Model.CoverUrl" class="img-fluid d-block mt-2 mr-auto ml-auto" width="200" height="200" />
        <a href="bookAudioFiles/@Model.Id" class="btn btn-primary text-white mt-2">Go listen</a>
        <h4 class="text-white text-center mt-2">@Model.Description</h4>
        <a href="/Products/Delete?id=@Model.Id" class="btn btn-danger text-white mt-2">Delete Product</a>
        <a href="/Products/Delete?id=@Model.Id" class="btn btn-info text-white mt-2">Edit Product</a>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Categories">Back to List</a>
</div>
