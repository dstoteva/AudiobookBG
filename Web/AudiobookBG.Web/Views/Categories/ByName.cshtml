@model AudiobookBG.Web.ViewModels.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = Model.Name;
}

    <div class="page-header header-filter" data-parallax="true" style="background-image: url('img/Background.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <div class="brand text-center">
                        <h1>@ViewData["Title"]</h1>
                        @if (this.User.IsInRole("Administrator"))
                        {
                            <p class="text-center">
                                <a class="btn btn-primary" asp-area="Administration" asp-action="Create" asp-controller="Books">Create New</a>
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="main main-raised">
    <div class="container">
        <div class="section text-center">
            <div class="row justify-content-start">
                @foreach (var item in Model.Books)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 card" style="width: 18rem;">
                        <div class="card-body">
                        <a href="@item.Url"><img src="@item.CoverUrl" width="200" height="200" alt="Rounded Image" class="rounded img-fluid" /></a>
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
